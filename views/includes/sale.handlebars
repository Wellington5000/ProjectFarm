<head>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js'></script>
</head>

<!-- Modal -->
<div class="modal fade" id="modal-selected" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Medicamentos Selecionados</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul id="list">
          
        </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">CONCLUIR</button>
      </div>
    </div>
  </div>
</div>

<div class="painel-branco-sale">
  <div>
    <input id="searcher" autofocus type="text" placeholder="Procurar" aria-label="Search" >
    <img id="lupa" onclick="search()" src="lupa.png">
  </div>

  <div class="form-sale">
    <label for="name-medicine">Nome</label>
    <input disabled type="text" name="name-medicine" id="name-medicine">

    <label for="description">Descrição</label>
    <input disabled type="text" name="description" id="description">
    <br>
    <label for="lote">Lote</label>
    <input disabled type="text" name="lote" id="lote">

    <label for="amount">Quantidade</label>
    <input type="number" name="amount" id="amount" onchange="changedAmount()">
    <br>
    <label for="value">Preço</label>
    <input type="number" name="price" id="price">
  </div>

  <div class="image-medicine" id="image-medicine">
    <img src="" id="img" alt="">
  </div>

  <button onclick="add()" class="add">ADICIONAR</button>

  <div class="total-value">
    <label for="total-value">Valor Total</label>
    <input id="total-value" type="number" class="total">
  </div>

  <button onclick="checkout()" class="checkout">Finalizar Venda</button>
  <a href="#" data-toggle="modal" data-target="#modal-selected" id="link-modal-selected">Ver adicionados</a>

  <p id="userId" hidden>{{userId}}</p>
</div>

<script src="/sale.js" type="text/javascript"></script>